
{
  "manifest_version": 2,
  "name":    "Test Extension",
  "version": "0.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs", 
    "http://*/*", 
    "https://*/*"
  ]
}